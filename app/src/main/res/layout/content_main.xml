<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.candlersartain.tapem.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn1"
        android:layout_marginTop="65dp"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="15dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn2"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_alignTop="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_alignTop="@+id/btn2"
        android:layout_toEndOf="@+id/btn2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn4"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_below="@+id/btn1"
        android:layout_alignStart="@+id/btn1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn5"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_alignTop="@+id/btn4"
        android:layout_alignStart="@+id/btn2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn6"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_alignTop="@+id/btn5"
        android:layout_toEndOf="@+id/btn5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn7"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_below="@+id/btn4"
        android:layout_alignStart="@+id/btn4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn8"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_below="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn9"
        android:src="@drawable/default_square"
        android:onClick="checkTap"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn5" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/player1"
        android:background="#cbcbcb"
        android:max="25"
        android:layout_below="@+id/btn7"
        android:layout_alignEnd="@+id/btn9"
        android:layout_marginTop="26dp"
        android:layout_alignStart="@+id/btn7" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:id="@+id/player2"
        android:background="#cbcbcb"
        android:max="25"
        android:layout_below="@+id/player1"
        android:layout_alignEnd="@+id/player1"
        android:layout_marginTop="30px"
        android:layout_alignStart="@+id/player1"
        android:progressTint="#0092d1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score: 0"
        android:id="@+id/scoreView"
        android:layout_below="@+id/player2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
